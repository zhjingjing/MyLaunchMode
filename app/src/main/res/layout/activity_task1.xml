<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mylaunchmode.singleTask.Task1Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:text=""
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/tv_id"
        />
    <Button
        android:layout_below="@+id/tv_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:text="task1Activity"
        android:id="@+id/btn_task1"
        />
    <Button
        android:layout_below="@+id/btn_task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:text="task2Activity"
        android:id="@+id/btn_task2"
        />
</RelativeLayout>
