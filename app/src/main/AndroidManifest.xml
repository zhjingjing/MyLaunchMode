<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mylaunchmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".standard.StandardActivity" />
        <activity
            android:name=".singleTop.Top1Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".singleTop.Top2Activity"
            android:launchMode="singleTop" />
        <activity
            android:name=".singleTask.Task1Activity"
            android:launchMode="singleTask" />
        <activity
            android:name=".singleTask.Task2Activity"
            android:launchMode="singleTask" />
        <activity android:name=".singleInstance.Instance1Activity"
            android:launchMode="singleInstance"
            />
        <activity android:name=".singleInstance.Instance2Activity"
            android:launchMode="singleInstance"
            ></activity>
    </application>

</manifest>